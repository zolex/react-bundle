{
    "name": "zolex/react-bundle",
    "description": "ReactPHP Bundle for Symfony",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Linden",
            "email": "zlx@gmx.de"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-fileinfo": "*",
        "symfony/config": "^6.4|^7.0",
        "symfony/dependency-injection": "^6.4|^7.0",
        "symfony/http-kernel": "^6.4|^7.0",
        "symfony/routing": "^6.4|^7.0",
        "nyholm/psr7": "^1.8",
        "symfony/psr-http-message-bridge": "^6.4|^7.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-message": "^1.0",
        "react/http": "^1.11",
        "symfony/dotenv": "^6.4|^7.0",
        "symfony/runtime": "^6.4|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Zolex\\ReactBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zolex\\ReactBundle\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "symfony/framework-bundle": "^6.4|^7.0"

    },
    "scripts": {
        "test": "vendor/phpunit/phpunit/phpunit"
    },
    "suggest": {
        "symfony/panther": "For End-to-End testing with a real Twirp Server and Client (see EndToEndTestCase).",
        "guzzlehttp/psr7": "PSR-17 request factory"
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": false
        }
    }
}
